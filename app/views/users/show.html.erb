<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
	</aside>
  	<div class="span8">
		<%= render 'follow_form' if signed_in? %>
	    <% if @user.events.any? %>
	      <h3>Events (<%= @user.events.count %>)</h3>
	      <ol class="events">
	        <%= render @events %>
	      </ol>
	      <%= will_paginate @events %>
	    <% end %>
  	</div>
</div>